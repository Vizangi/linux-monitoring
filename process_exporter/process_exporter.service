[Unit]
Description=Process Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/opt/linux_monitoring/process_exporter/process-exporter \
    --config.path=/opt/linux_monitoring/process_exporter/process_exporter.yml \
    --web.listen-address=192.168.31.42:9256
Restart=always

[Install]
WantedBy=multi-user.target
