[Unit]
Description=Blackbox Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/opt/linux_monitoring/blackbox_exporter/blackbox_exporter --config.file=/opt/linux_monitoring/blackbox_exporter/blackbox.yml --web.listen-address=":9115"
Restart=on-failure

[Install]
WantedBy=multi-user.target
