[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/opt/linux_monitoring/prometheus/prometheus     --config.file /opt/linux_monitoring/prometheus/prometheus.yml     --storage.tsdb.path /opt/linux_monitoring/prometheus/prometheusTSDB     --web.console.templates=/opt/linux_monitoring/prometheus/consoles     --web.console.libraries=/opt/linux_monitoring/prometheus/console_libraries
Restart=on-failure

[Install]
WantedBy=multi-user.target
